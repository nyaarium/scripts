#!/bin/bash

source ~/.env


git fetch --prune
if [[ $? -ne 0 ]]; then
	echo "âš ï¸  Error fetching remote branches."
	exit 1
fi

echo ""


branches=$(git branch -vv | grep -v "^\*")
while IFS= read -r line; do
    branch_name=$(echo "$line" | awk '{print $1}')
    origin=$(echo "$line" | grep -o '\[.*\]' | awk -F'[][]' '{print $2}')
    origin_branch=$(echo "$origin" | awk -F': ' '{print $1}')
    ahead_behind=$(echo "$origin" | awk -F': ' '{print $2}')

	if [[ -z "$origin_branch" ]]; then
		# Local branch. Try to delete it
		
		git branch -d "$branch_name" > /dev/null 2>&1
		if [[ $? -ne 0 ]]; then
			echo "âš ï¸  Local branch has not been pushed yet:  $branch_name"
		else
			echo "ğŸ—‘ï¸  Local branch deleted:  $branch_name"
		fi
    elif [[ "$ahead_behind" == *ahead* ]]; then
		# Ahead of remote branch
		echo "âš ï¸  Tracked branch has unpushed commits:  $branch_name"
    else
		# No work on branch
		git branch -d "$branch_name" > /dev/null 2>&1
		if [[ $? -ne 0 ]]; then
			echo "âš ï¸  Error deleting tracked branch:  $branch_name"
		else
			echo "ğŸ—‘ï¸  Tracked branch deleted:  $branch_name"
		fi
    fi
done <<< "$branches"


echo ""

git branch -l
